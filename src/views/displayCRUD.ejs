<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    table, th, td {
      border:1px solid black;
      text-align: center;
    }

    a {
        text-decoration: none;
    }

    .btn-edit {
        display: inline-block;
        background-color: red;
        width: 50px;
        border-radius: 5px;
        color: #fff;
    }

    .btn-delete {
        display: inline-block;
        background-color: #000;
        width: 50px;
        border-radius: 5px;
        color: #fff;
    }
</style>
<body>
    <table style="width:100%">
        <tr>
          <td>Email</td>
          <td>First Name</td>
          <td>Last Name</td>
          <td>Address</td>
          <td>Actions</td>
        </tr>
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td><%= dataTable[i].password %></td>
              <td>
                <a href="/edit-crud?id=<%=dataTable[i].id%>" class="btn-edit">Edit</a>
                <a href="/delete-crud?id=<%=dataTable[i].id%>" class="btn-delete">Delete</a>
              </td>
            </tr>
         <% } %>
      </table>
</body>
</html>